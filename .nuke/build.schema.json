{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "Clean",
        "DockerBuild",
        "DockerLogin",
        "DockerPush",
        "DockerPushAliyun",
        "DockerPushAll",
        "DockerPushAzure",
        "Download",
        "Extract",
        "GitHubRelease",
        "Release",
        "Restore"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "AliyunAcrPassword": {
          "type": "string",
          "description": "Aliyun ACR password/token",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AliyunAcrRegistry": {
          "type": "string",
          "description": "Aliyun ACR registry (default: registry.cn-hangzhou.aliyuncs.com)"
        },
        "AliyunAcrUsername": {
          "type": "string",
          "description": "Aliyun ACR username",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureAcrPassword": {
          "type": "string",
          "description": "Azure ACR password/token",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureAcrRegistry": {
          "type": "string",
          "description": "Azure ACR registry (default: hagicode.azurecr.io)"
        },
        "AzureAcrUsername": {
          "type": "string",
          "description": "Azure ACR username",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureBlobSasUrl": {
          "type": "string",
          "description": "Azure Blob Storage SAS URL for downloading packages",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "DockerImageName": {
          "type": "string",
          "description": "Docker image name"
        },
        "DockerPassword": {
          "type": "string",
          "description": "Docker Hub password/token",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "DockerRegistry": {
          "type": "string",
          "description": "Docker registry (e.g., docker.io/newbe36524)"
        },
        "DockerUsername": {
          "type": "string",
          "description": "Docker Hub username",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "GitHubRepository": {
          "type": "string",
          "description": "GitHub repository (e.g., owner/repo)"
        },
        "GitHubToken": {
          "type": "string",
          "description": "GitHub token for release creation",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "OutputDirectory": {
          "type": "string",
          "description": "Output directory for downloaded/extracted files"
        },
        "Version": {
          "type": "string",
          "description": "Version from git tag (e.g., v1.0.0)"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
